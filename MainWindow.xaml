<Window x:Class="Practice12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ProgressBar Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10" Minimum="0" Name="ProgressBarOnTasks" Background="LightYellow" Foreground="DarkTurquoise"></ProgressBar>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" Name="ProgressTextOnTasks" Text="0/0" FontSize="20"></TextBlock>
        
        <TextBlock Text="Список дел" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Center" FontWeight="Bold" Foreground="DarkTurquoise" FontSize="26"></TextBlock>
        <DataGrid AlternatingRowBackground="#FFFDFAF1" Grid.ColumnSpan="2"  Grid.Row="1" BorderBrush="Black"  HeadersVisibility="None" Margin="10" Background="LightYellow" Name="ToDoGrid" AutoGenerateColumns="false" CanUserAddRows="False" CanUserDeleteRows="False">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Path=IsFinished}"></DataGridCheckBoxColumn>
                <DataGridTextColumn Width="2*" Binding="{Binding Path=Name}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Width="1*" Binding="{Binding Path=Date, StringFormat='dd.MM.yyyy'}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Background="LightBlue" Click="Delete_Click"><Image Height="15" Width="10" Source="/Sources/delete.png" /></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            
            
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBox MaxHeight="55" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Text="{Binding Path=Description}"></TextBox>
                    </StackPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <Button Name="DeleteButtonGui" Background="DarkTurquoise" Grid.Row="0" Grid.Column="1" Margin="10" Click="ButtonForAdding_Click">
            <Image Source="/Sources/add.png" />
        </Button>

        
    </Grid>
</Window>
