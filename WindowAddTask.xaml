<Window x:Class="Practice12.WindowAddTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice12"
        mc:Ignorable="d"
        Title="WindowAddTask" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Новое дело" Foreground="DarkTurquoise" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26"></TextBlock>

        <Border Grid.Row="1" Grid.Column="1" BorderBrush="White" Background="LightYellow" BorderThickness="1" Margin="10" Name="BorderForAdding">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Название:"  Margin="5"></TextBlock>
                    <TextBox Margin="5" BorderBrush="DarkTurquoise" BorderThickness="1.5"  Name="NameTextBoxGui"></TextBox>
                    <TextBlock Text="Выполнить до:" Margin="5"></TextBlock>
                    <DatePicker Margin="5" Name="DatePickerGui" BorderBrush="DarkTurquoise" BorderThickness="1.5" SelectedDateFormat="Short">
                    
                    </DatePicker>
                    <TextBlock Text="Описание:" Margin="5" ></TextBlock>

                    <TextBox VerticalScrollBarVisibility="Auto" BorderBrush="DarkTurquoise" BorderThickness="1.5"  AcceptsReturn="True" Margin="5" MaxHeight="140" Name="DescriptionGui"></TextBox>
                </StackPanel>

            </DockPanel>
        </Border>
        <Button Content="Сохранить дело" Background="DarkTurquoise" Grid.Row="2" Grid.Column="1" Height="25" Width="100" Name="ButtonForAdding" Click="ButtonForAdding_Click"></Button>

    </Grid>
</Window>
