<Window Closing="MainWindow_Closing" x:Class="Practice12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice12"
        xmlns:converter="clr-namespace:Practice12.Converter"
        mc:Ignorable="d"
        Title="Ваши делишки :)" Height="450" Width="400" ResizeMode="NoResize"
        Icon="/Sources/icon.png">


    <Window.Resources>
        <converter:DateTimeLessDateConverter x:Key="LessDayConverter" />
        <converter:DateTimeTodayDateConverter x:Key="TodayDayConverter" />
        <converter:DateTimeTmrwDateConverter x:Key="TmrwDayConverter" />
        <Style TargetType="TextBlock" x:Key="LineThroughText">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFinished}" Value="True">
                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock" x:Key="MarkDateWColor">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Date, Converter={StaticResource LessDayConverter}}" Value="true">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Date, Converter={StaticResource TodayDayConverter}}" Value="true">
                    <Setter Property="Foreground" Value="#FFEA6A20"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Date, Converter={StaticResource TmrwDayConverter}}" Value="true">
                    <Setter Property="Foreground" Value="#DAA520"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBoxItem">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="FontWeight" Value="Black"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="ProgressBar">
            <Setter Property="Orientation" Value="Horizontal"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Minimum" Value="0"></Setter>
            <Setter Property="Background" Value="LightYellow"></Setter>
            <Setter Property="Foreground" Value="#5EBEC4"></Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ProgressBar Grid.Row="2" Grid.ColumnSpan="3" Name="ProgressBarOnTasks" ></ProgressBar>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="3" Name="ProgressTextOnTasks" Text="0/0" FontSize="20"></TextBlock>

        <TextBlock Text="Список дел" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Style="{DynamicResource ResourceKey=HeaderStyle}"></TextBlock>
        <ListBox MouseDoubleClick="ListItems_MouseDoubleClick" HorizontalContentAlignment="Stretch" Grid.Row="1" Grid.ColumnSpan="3" Name="ListItems"  Background="#FFFFFAD6" Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="0.5*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                            <CheckBox x:Name="ItemChecked" IsChecked="{Binding Path=IsFinished, Mode=TwoWay}" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"></CheckBox>
                            <ScrollViewer MaxWidth="200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <TextBlock Style="{StaticResource LineThroughText}" x:Name="NameTask" Text="{Binding Path=Name}" Margin="5" HorizontalAlignment="Stretch"></TextBlock>
                            </ScrollViewer>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource MarkDateWColor}" Text="{Binding Path=Date, StringFormat='Дата: {0:dd.MM.yyyy}'}" VerticalAlignment="Center"></TextBlock>
                            <Button Click="Delete_Click" Height="20" Width="20">
                                <Image Source="/Sources/delete.png" />
                            </Button>
                        </StackPanel>
                        <TextBox Text="{Binding Path=Description}" FontSize="10" MaxHeight="60" Grid.Row="1" Grid.ColumnSpan="2" Background="#FFFFFAD6" BorderBrush="#FFFFFAD6" VerticalScrollBarVisibility="Auto" IsReadOnly="True"></TextBox>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <Button Name="DeleteButtonGui" Background="#5EBEC4" Grid.Row="0" Grid.Column="2" Margin="5" Click="ButtonForAdding_Click">
            <Image Source="/Sources/add.png" />
        </Button>
        <Button Name="SaveButtonGui" Background="#5EBEC4" Grid.Row="0" Grid.Column="1" Margin="5" Click="SaveButtonGui_Click">
            <Image Source="/Sources/save.png" />

        </Button>


    </Grid>
</Window>
